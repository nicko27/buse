{% extends "layouts/default.twig" %}

{% block title %}500 - Erreur serveur{% endblock %}

{% block content %}
    <div style="text-align: center; padding: 40px;">
        <h1 style="color: #c0392b; font-size: 72px; margin: 0;">500</h1>
        <h2 style="color: #2c3e50;">Erreur serveur</h2>
        <p style="font-size: 18px; color: #7f8c8d; margin: 20px 0;">
            Une erreur interne s''est produite. L''equipe technique a ete notifiee.
        </p>

        {% if debug_mode and error_message is defined %}
            <details style="margin: 30px 0; text-align: left; background: #ffebee; padding: 20px; border-radius: 8px; border: 1px solid #f44336;">
                <summary style="cursor: pointer; font-weight: bold; color: #c62828;">Debug - Details de l''erreur</summary>
                <pre style="background: #f5f5f5; padding: 15px; margin: 10px 0; overflow-x: auto; border-radius: 4px;">{{ error_message }}</pre>
            </details>
        {% endif %}

        <a href="{{ url('index') }}" style="background: #3498db; color: white; padding: 12px 24px; text-decoration: none; border-radius: 6px; display: inline-block; margin-top: 20px;">
            Retour a l''accueil
        </a>
    </div>
{% endblock %}