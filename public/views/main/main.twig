
  <div class="title">
    <div class="banner-content">
      <h1>{{ SITE_LONG_NAME }}</h1>
      <div class="subtitle">{{ SUBTITLE|raw }}</div>
    </div>
    <div class="title-icon">
      <img src="{{ WEB_ASSETS }}/img/index/bused.png" alt="Logo"/>
    </div>
  </div>
  <div class="flex-v">
    <div class="menu">
      <div class="menu__block glass">
        {{ ENV }}
        <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_DEFAULT }}{{ debugMenu }}" id="default" class="menu__elt">Accueil</a>
        {% if user.import %}
            <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_IMPORT }}{{ debugMenu }}" id="import" class="menu__elt">Imports et mises à jour</a>
        {% endif %}
        {% if user.admin %}
            <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_SITES }}{{ debugMenu }}" id="sites" class="menu__elt">Gestion des sites web</a>
            <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_SERVICES }}{{ debugMenu }}" id="services" class="menu__elt">Gestion des types de services</a>
            <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_UNITES_LDAP }}{{ debugMenu }}" id="unites" class="menu__elt">Gestion des unités LDAP</a>
            <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_UNITES_MANUELLES }}{{ debugMenu }}" id="unites" class="menu__elt">Gestion des unités manuelles</a>
            <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_CIES }}{{ debugMenu }}" id="cie" class="menu__elt">Gestion des compagnies</a>
            <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_CITIES }}{{ debugMenu }}" id="cities" class="menu__elt">Gestion des communes</a>
            <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_MAIRIES }}{{ debugMenu }}" id="cities" class="menu__elt">Gestion des mairies</a>
            <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_CATEGORIES }}{{ debugMenu }}" id="categories" class="menu__elt">Catégories d'évènements</a>
            <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_RIGHTS }}{{ debugMenu }}" id="rights" class="menu__elt">Gestion des droits</a>
        {% endif %}
        {% if user.synthesisLevel==11 %}
            <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_PREPARE_SYNTHESE }}{{ debugMenu }}" id="synthese" class="menu__elt">Synthèse Locale</a>
        {% endif %}
        {% if user.synthesisLevel==12 %}
            <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_PREPARE_SYNTHESE }}{{ debugMenu }}" id="synthese" class="menu__elt">Synthèse Globale</a>
        {% endif %}
        {% if user.superAdmin %}
            <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_UPDATE }}{{ debugMenu }}" id="update" class="menu__elt">Git</a>
            <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_CONFIGURATION }}{{ debugMenu }}" id="configuration" class="menu__elt">Gestion des variables de configuration</a>
            <a href="index.php?page={{ PAGE_ACCUEIL }}&subpage={{ SUBPAGE_PAGES }}{{ debugMenu }}" id="pages" class="menu__elt">Gestion des pages du site</a>
        {% endif %}


